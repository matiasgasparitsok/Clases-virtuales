    <!-- Panel de Ayuda -->
    <div class="help-panel" id="helpPanel">
        <div class="help-title">‚ùì Gu√≠a de Uso</div>
        
        <div class="help-section">
            <strong>üé≤ Tirar dados</strong>
            <p style="font-size: 13px; margin-top: 8px;">Haz clic en cada dado para cambiar su n√∫mero. Practica sumando los dados que tienen el mismo valor.</p>
        </div>

        <div class="help-section">
            <strong>üìù Agregar notas</strong>
            <p style="font-size: 13px; margin-top: 8px;">Usa el bot√≥n "+" para crear notas adhesivas. Arr√°stralas por el canvas y haz clic para editarlas.</p>
        </div>

        <div class="help-section">
            <strong>‚úèÔ∏è Completar ejercicios</strong>
            <p style="font-size: 13px; margin-top: 8px;">Escribe tus respuestas en los campos. Si est√°n correctas, se pondr√°n verdes. Si est√°n incorrectas, se pondr√°n rojas.</p>
        </div>

        <div class="help-section">
            <strong>üñ±Ô∏è Navegar</strong>
            <p style="font-size: 13px; margin-top: 8px;">Usa las ruedas de zoom o despl√°zate por el canvas arrastrando. Todos los elementos son interactivos.</p>
        </div>

        <div class="help-section">
            <strong>üé® Stickers</strong>
            <p style="font-size: 13px; margin-top: 8px;">Agrega emojis para crear tus propios problemas o decorar tu trabajo.</p>
        </div>
    </div>

    <button class="add-sticky" onclick="addSticky()">+</button>

    <div class="controls">
        <button class="control-btn" onclick="zoom(-0.1)" title="Alejar">‚àí</button>
        <button class="control-btn" onclick="zoom(0.1)" title="Acercar">+</button>
        <button class="control-btn" onclick="resetZoom()" title="Restablecer vista">‚ü≤</button>
    </div>

    <div class="minimap">
        <div style="padding: 10px; font-size: 11px; color: #666; text-align: center;">
            <strong>Mapa de navegaci√≥n</strong><br>
            6 sesiones ‚Ä¢ 12 frames
        </div>
    </div>

    <script>
        let currentZoom = 1;
        let draggedElement = null;
        let offsetX, offsetY;
        const diceSymbols = ['‚öÄ', '‚öÅ', '‚öÇ', '‚öÉ', '‚öÑ', '‚öÖ'];
        const stickyColors = ['', 'blue', 'pink', 'green', 'purple'];

        // Sistema de arrastre
        document.addEventListener('mousedown', function(e) {
            if (e.target.classList.contains('sticky-note') || e.target.classList.contains('sticker')) {
                draggedElement = e.target;
                const rect = draggedElement.getBoundingClientRect();
                const container = document.querySelector('.canvas-container');
                offsetX = e.clientX - rect.left + container.scrollLeft;
                offsetY = e.clientY - rect.top + container.scrollTop;
                draggedElement.style.cursor = 'grabbing';
                e.preventDefault();
            }
        });

        document.addEventListener('mousemove', function(e) {
            if (draggedElement) {
                const canvas = document.getElementById('canvas');
                const canvasRect = canvas.getBoundingClientRect();
                const container = document.querySelector('.canvas-container');
                
                draggedElement.style.left = (e.clientX - canvasRect.left + container.scrollLeft - offsetX) + 'px';
                draggedElement.style.top = (e.clientY - canvasRect.top + container.scrollTop - offsetY) + 'px';
            }
        });

        document.addEventListener('mouseup', function() {
            if (draggedElement) {
                draggedElement.style.cursor = 'move';
                draggedElement = null;
            }
        });

        // Funciones de dados
        function changeDice(element) {
            const currentIndex = diceSymbols.indexOf(element.textContent);
            const nextIndex = (currentIndex + 1) % diceSymbols.length;
            element.textContent = diceSymbols[nextIndex];
            element.style.transform = 'rotate(' + (Math.random() * 360) + 'deg)';
            setTimeout(() => {
                element.style.transform = 'rotate(0deg)';
            }, 300);
        }

        function rollDice() {
            const dices = document.querySelectorAll('.dice');
            dices.forEach(dice => {
                const randomIndex = Math.floor(Math.random() * diceSymbols.length);
                dice.textContent = diceSymbols[randomIndex];
                dice.style.transform = 'rotate(' + (Math.random() * 720) + 'deg)';
            });
            setTimeout(() => {
                dices.forEach(dice => {
                    dice.style.transform = 'rotate(0deg)';
                });
            }, 500);
        }

        // Verificar respuestas
        function checkAnswer(input) {
            const correctAnswer = input.getAttribute('data-answer');
            const userAnswer = input.value.trim();
            
            if (userAnswer === '') {
                input.parentElement.classList.remove('highlight-correct', 'highlight-incorrect');
                return;
            }
            
            if (userAnswer === correctAnswer) {
                input.parentElement.classList.remove('highlight-incorrect');
                input.parentElement.classList.add('highlight-correct');
                input.style.background = '#C8E6C9';
                input.style.borderColor = '#4CAF50';
            } else {
                input.parentElement.classList.remove('highlight-correct');
                input.parentElement.classList.add('highlight-incorrect');
                input.style.background = '#FFCDD2';
                input.style.borderColor = '#F44336';
            }
        }

        // Verificar opciones m√∫ltiples
        function checkMultipleChoice(checkbox) {
            const isCorrect = checkbox.getAttribute('data-correct') === 'true';
            const label = checkbox.parentElement;
            
            if (checkbox.checked) {
                if (isCorrect) {
                    label.style.background = '#C8E6C9';
                    label.style.borderColor = '#4CAF50';
                } else {
                    label.style.background = '#FFCDD2';
                    label.style.borderColor = '#F44336';
                }
            } else {
                label.style.background = 'white';
                label.style.borderColor = '#ddd';
            }
        }

        // Agregar nota adhesiva
        function addSticky() {
            const color = stickyColors[Math.floor(Math.random() * stickyColors.length)];
            const sticky = document.createElement('div');
            sticky.className = 'sticky-note ' + color;
            const container = document.querySelector('.canvas-container');
            sticky.style.left = (300 + Math.random() * 400 + container.scrollLeft) + 'px';
            sticky.style.top = (200 + Math.random() * 300 + container.scrollTop) + 'px';
            sticky.contentEditable = true;
            sticky.textContent = 'Escribe aqu√≠ tu nota...';
            sticky.style.transform = 'rotate(' + (Math.random() * 6 - 3) + 'deg)';
            
            sticky.addEventListener('focus', function() {
                if (this.textContent === 'Escribe aqu√≠ tu nota...') {
                    this.textContent = '';
                }
            });
            
            sticky.addEventListener('blur', function() {
                if (this.textContent.trim() === '') {
                    this.textContent = 'Escribe aqu√≠ tu nota...';
                }
            });
            
            document.getElementById('canvas').appendChild(sticky);
        }

        // Agregar sticker
        function addSticker(emoji) {
            const sticker = document.createElement('div');
            sticker.className = 'sticker';
            sticker.textContent = emoji;
            const container = document.querySelector('.canvas-container');
            sticker.style.left = (400 + Math.random() * 500 + container.scrollLeft) + 'px';
            sticker.style.top = (300 + Math.random() * 400 + container.scrollTop) + 'px';
            
            document.getElementById('canvas').appendChild(sticker);
        }

        // Limpiar contenido del usuario
        function clearUserContent() {
            if (confirm('¬øQuieres eliminar todas las notas y stickers que agregaste?')) {
                const canvas = document.getElementById('canvas');
                const userStickers = canvas.querySelectorAll('.sticker');
                const userStickies = Array.from(canvas.querySelectorAll('.sticky-note')).filter(note => {
                    return note.style.left.includes('px') && parseInt(note.style.left) > 2200;
                });
                
                userStickers.forEach(s => s.remove());
                userStickies.forEach(s => s.remove());
                
                // Limpiar inputs
                document.querySelectorAll('input[type="number"], input[type="text"]').forEach(input => {
                    input.value = '';
                    input.style.background = '';
                    input.style.borderColor = '';
                    if (input.parentElement) {
                        input.parentElement.classList.remove('highlight-correct', 'highlight-incorrect');
                    }
                });
                
                // Desmarcar checkboxes
                document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                    cb.checked = false;
                    if (cb.parentElement) {
                        cb.parentElement.style.background = 'white';
                        cb.parentElement.style.borderColor = '#ddd';
                    }
                });
            }
        }

        // Control de zoom
        function zoom(delta) {
            currentZoom += delta;
            if (currentZoom < 0.3) currentZoom = 0.3;
            if (currentZoom > 2) currentZoom = 2;
            
            const canvas = document.getElementById('canvas');
            canvas.style.transform = `scale(${currentZoom})`;
            canvas.style.transformOrigin = 'top left';
        }

        function resetZoom() {
            currentZoom = 1;
            const canvas = document.getElementById('canvas');
            canvas.style.transform = 'scale(1)';
            document.querySelector('.canvas-container').scrollTo(0, 0);
        }

        // Toggle panel de ayuda
        function toggleHelp() {
            const panel = document.getElementById('helpPanel');
            panel.classList.toggle('open');
        }

        // Cerrar panel de ayuda al hacer clic fuera
        document.addEventListener('click', function(e) {
            const panel = document.getElementById('helpPanel');
            const helpBtn = e.target.closest('.tool-btn');
            if (panel.classList.contains('open') && !panel.contains(e.target) && (!helpBtn || !helpBtn.textContent.includes('Ayuda'))) {
                panel.classList.remove('open');
            }
        });

        // Hacer inputs editables en notas al hacer clic
        document.querySelectorAll('.sticky-note').forEach(note => {
            note.addEventListener('focus', function() {
                this.style.zIndex = 1000;
            });
        });
    </script>
</body>
</html>
